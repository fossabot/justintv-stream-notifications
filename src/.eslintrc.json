{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "commonjs": true
    },
    "plugins": [
        "babel",
        "import"
    ],
    "rules": {
        "arrow-parens": 1,
        "generator-star-spacing": 1,
        "typelint/typelint": 0
    },
    "settings": {
        "import/resolver": "webpack",
        "typelint": {
            "models": {
                "redux": {
                    "reducerPath": "./src/list/reducers.js"
                }
            },
            "useCache":  true
        }
    },
    "extends": [
        "plugin:freaktechnik/extension",
        "plugin:import/errors",
        "plugin:import/warnings"
    ]
}
