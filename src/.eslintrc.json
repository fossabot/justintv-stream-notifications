{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "commonjs": true,
        "webextensions": true
    },
    "plugins": [
        "babel"
    ],
    "rules": {
        "node/no-missing-require": 0,
        "node/no-unpublished-require": 0,
        "node/no-unsupported-features": 0,
        "no-console": 0,
        "arrow-parens": 1,
        "generator-star-spacing": 1
    },
    "extends": "plugin:freaktechnik/browser"
}
