{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "commonjs": true,
        "webextensions": true
    },
    "plugins": [
        "babel",
        "xss"
    ],
    "rules": {
        "node/no-missing-require": 0,
        "node/no-unpublished-require": 0,
        "node/no-unsupported-features": 0,
        "arrow-parens": 1,
        "generator-star-spacing": 1,
        "xss/no-mixed-html": 2,
        "xss/no-location-href-assign": 2
    },
    "extends": "plugin:freaktechnik/browser"
}
