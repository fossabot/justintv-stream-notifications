{
    "type": "object",
    "patternProperties": {
        "^[a-zA-Z1-9_]+$": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": [
                        "bool",
                        "radio",
                        "integer",
                        "string"
                    ]
                },
                "value": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "number"
                        }
                    ]
                },
                "hidden": {
                    "type": "boolean",
                    "default": false
                },
                "options": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "value": {
                                "type": "string"
                            },
                            "label": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "value",
                            "label"
                        ]
                    },
                    "minItems": 2,
                    "uniqueItems": true
                }
            },
            "required": [
                "type",
                "value"
            ],
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
